<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Background">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/carrot" />

        <ImageView
                android:id="@+id/gosetting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/setting" />

        <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:onClick="onback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/backkey" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/lock2"
            android:layout_width="342dp"
            android:layout_height="142dp"
            app:layout_constraintBottom_toBottomOf="@+id/bg2"
            app:layout_constraintEnd_toEndOf="@+id/bg2"
            app:layout_constraintStart_toStartOf="@+id/bg2"
            app:layout_constraintTop_toTopOf="@+id/bg2"
            app:srcCompat="@drawable/locked" />

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="348dp"
            android:layout_height="141dp"
            app:layout_constraintBottom_toBottomOf="@+id/bg3"
            app:layout_constraintEnd_toEndOf="@+id/bg3"
            app:layout_constraintStart_toStartOf="@+id/bg3"
            app:layout_constraintTop_toTopOf="@+id/bg3"
            app:srcCompat="@drawable/locked" />

    <Button
            android:id="@+id/bg1"
            android:layout_width="350dp"
            android:layout_height="157dp"
            android:layout_marginTop="72dp"
            android:text="1단계"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
            android:id="@+id/bg2"
            android:layout_width="350dp"
            android:layout_height="157dp"
            android:layout_marginTop="32dp"
            android:text="2단계"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg1" />

    <Button
            android:id="@+id/bg3"
            android:layout_width="350dp"
            android:layout_height="157dp"
            android:layout_marginTop="32dp"
            android:text="3단계"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg2" />

</androidx.constraintlayout.widget.ConstraintLayout>