<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Illust">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/carrot" />

        <ImageView
                android:id="@+id/gosetting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/settings" />

        <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:onClick="onback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/backkey" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/stage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/img1"
                        android:layout_width="400dp"
                        android:layout_height="560dp"
                        android:src="@drawable/yohan"
                        app:srcCompat="@drawable/yohan"
                        tools:srcCompat="@drawable/yohan" />

                <TextView
                        android:id="@+id/explain1"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:gravity="center_vertical"
                        android:text="초보 개발자"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/stage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/img2"
                        android:layout_width="400dp"
                        android:layout_height="560dp"
                        android:src="@drawable/yohan"
                        app:srcCompat="@drawable/yohan"
                        tools:srcCompat="@drawable/yohan" />

                <TextView
                        android:id="@+id/explain2"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:gravity="center_vertical"
                        android:text="중급 개발자"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/stage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/img3"
                        android:layout_width="400dp"
                        android:layout_height="560dp"
                        android:src="@drawable/yohan"
                        app:srcCompat="@drawable/yohan"
                        tools:srcCompat="@drawable/yohan" />

                <TextView
                        android:id="@+id/explain3"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:gravity="center_vertical"
                        android:text="고급 개발자"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>