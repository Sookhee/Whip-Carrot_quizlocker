<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizLockerActivity">

    <TextView
            android:text="정답횟수 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/correctCountLabel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/wrongCountLabel"
    />
    <TextView
            android:text="오답횟수 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrongCountLabel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="24sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/quizLabel"/>

    <TextView
            android:id="@+id/quizLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/sbubble"
            android:gravity="center|center_horizontal"
            android:text="포르투갈의\n수도는?"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:max="100"
            android:maxHeight="4dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    <TextView
            android:text="서울"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/choice1" android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/leftImageView"
            app:layout_constraintStart_toStartOf="@+id/leftImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/leftImageView" app:layout_constraintHorizontal_bias="0.55"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="리스본"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/choice2" android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/rightImageView"
            app:layout_constraintStart_toStartOf="@+id/rightImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rightImageView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp" app:srcCompat="@drawable/padlock" android:id="@+id/leftImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:adjustViewBounds="true"/>

    <ImageView
            android:id="@+id/rightImageView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/padlock" />
</androidx.constraintlayout.widget.ConstraintLayout>